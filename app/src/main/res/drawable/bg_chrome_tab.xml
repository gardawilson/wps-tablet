<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Selected -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <!-- rounded top, flat bottom -->
            <corners
                android:topLeftRadius="12dp"
                android:topRightRadius="12dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp" />
            <!-- isi pakai surface supaya “nyatu” dengan Card -->
            <solid android:color="?attr/colorSurface" />
            <!-- garis halus keliling (Chrome-ish) -->
            <stroke android:width="1dp" android:color="?attr/colorOutline" />
            <!-- sedikit padding biar tab “bernapas” -->
            <padding android:left="8dp" android:top="6dp"
                android:right="8dp" android:bottom="6dp"/>
        </shape>
    </item>

    <!-- Not selected -->
    <item>
        <shape android:shape="rectangle">
            <corners
                android:topLeftRadius="12dp"
                android:topRightRadius="12dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp" />
            <!-- permukaan sedikit berbeda agar kontras tipis -->
            <solid android:color="?attr/colorSurfaceVariant" />
            <stroke android:width="1dp" android:color="?attr/colorOutlineVariant" />
            <padding android:left="8dp" android:top="6dp"
                android:right="8dp" android:bottom="6dp"/>
        </shape>
    </item>

</selector>
