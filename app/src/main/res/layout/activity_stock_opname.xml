<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@color/primary">

    <!-- CardView di Kiri -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:background="#FFFFFF"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Konten CardView Kiri -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STOCK OPNAME"
                android:textSize="30sp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TableLayout
                android:id="@+id/headerTableStockOpname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#EFEFEF"
                android:stretchColumns="0">

                <!-- Kolom Header -->
                <TableRow
                    android:background="@color/hijau">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="No. SO"
                        android:padding="8dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/gray" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tanggal"
                        android:padding="8dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/gray" />
                </TableRow>

            </TableLayout>

            <!-- RecyclerView untuk Data -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!-- Indikator Loading -->
            <ProgressBar
                android:id="@+id/loadingIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Layout untuk CardView di Kanan -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:elevation="4dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="STOCK OPNAME"
                    android:textSize="32sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:layout_marginEnd="16dp"/>

            <!-- Spinner -->
            <Spinner
                android:id="@+id/spinnerNoSO"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/spinner_background"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_marginEnd="16dp"
                android:gravity="center_vertical" />

            <!-- SearchView -->
            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchData"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:background="@drawable/searchview_background"
                android:queryHint="Cari..."
                android:padding="8dp"
                app:iconifiedByDefault="false"
                app:queryBackground="@android:color/transparent"
                app:searchHintIcon="@null"
                app:closeIcon="@drawable/ic_close"
                app:defaultQueryHint="Cari..."
                android:layout_marginEnd="16dp"/>

            <!-- Filter Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/filterButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filter"
                android:textColor="@color/white"
                android:backgroundTint="@color/primary_dark"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:elevation="2dp"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_filter"/>

        </LinearLayout>


        <!-- Baris Pertama (3 CardView) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:background="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- Header Tabel -->
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#EFEFEF">

                        <TableRow
                            android:background="@color/hijau">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Label"
                                android:padding="8dp"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="@color/white"/>

                            <View
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="@color/gray" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:padding="8dp"
                                android:text="Lokasi"
                                android:gravity="center"
                                android:layout_weight="0.5"
                                android:textStyle="bold"
                                android:textColor="@color/white" />

                        </TableRow>
                    </TableLayout>

                    <!-- Isi Tabel -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/dataLabelEmpty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Data Telah Di Input Seluruhnya"
                            android:gravity="center"
                            android:visibility="gone" />

                        <!-- RecyclerView untuk Data -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewBefore"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <!-- Indikator Loading -->
                        <ProgressBar
                            android:id="@+id/loadingIndicatorBefore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_gravity="center" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:background="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- Header Tabel -->
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#EFEFEF">

                        <TableRow
                            android:background="@color/hijau">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:padding="8dp"
                                android:text="Label"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:textColor="@color/white" />

                            <View
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="@color/gray" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:padding="8dp"
                                android:text="Lokasi"
                                android:gravity="center"
                                android:layout_weight="0.5"
                                android:textStyle="bold"
                                android:textColor="@color/white" />

                            <View
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="@color/gray" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:padding="8dp"
                                android:text="User"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:textColor="@color/white" />

                        </TableRow>
                    </TableLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <!-- Bagian Notifikasi (akan muncul di atas RecyclerView) -->
                        <LinearLayout
                            android:id="@+id/notificationLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@android:color/white"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp"
                            android:layout_alignParentTop="true"
                            android:elevation="8dp"
                            android:alpha="0.7"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tvNewDataNotification"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="New data available!"
                                android:textColor="@android:color/white"
                                android:background="@color/primary_dark"
                                android:padding="8dp"
                                android:textSize="14sp"
                                android:gravity="center"
                                android:layout_gravity="center_vertical"
                                android:clickable="true"
                                android:focusable="true" />
                        </LinearLayout>

                        <!-- RecyclerView untuk Data -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewAfter"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <!-- Indikator Loading -->
                        <ProgressBar
                            android:id="@+id/loadingIndicatorAfter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_gravity="center" />

                    </FrameLayout>



                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/countDataStock"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Total Label: 0"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/countLabelBefore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Sisa Label : 0"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/countLabelAfter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Total Scan : 0" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>