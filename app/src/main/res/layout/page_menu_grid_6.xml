                    android:layout_weight="50"
                    android:layout_marginStart="8dp"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

