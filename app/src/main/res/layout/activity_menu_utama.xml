<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_cream"
    tools:context=".MenuUtama">

    <!-- Header Menu -->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_gradient"
        android:padding="16dp"
        android:text="MENU UTAMA"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Username Display -->
    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:text="Hai, "
        android:textColor="@color/primary"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/textView4"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/usernameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="4dp"
        android:text="-"
        android:textColor="@color/primary"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/textView4"
        app:layout_constraintStart_toEndOf="@id/usernameTextView" />

    <!-- Grid Layout untuk Menu -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/usernameTextView"
        app:layout_constraintBottom_toTopOf="@+id/BtnLogout">

        <!-- Menu 1: Input Label -->
        <androidx.cardview.widget.CardView
            android:id="@+id/InputLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="24dp">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_startInputLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.15" /> <!--  Margin kiri 15% -->

                <ImageView
                    android:id="@+id/imageViewLabel"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:padding="12dp"
                    android:background="@drawable/circle_background"
                    android:src="@drawable/label"
                    app:tint="@color/primary"
                    app:layout_constraintStart_toEndOf="@id/guideline_startInputLabel"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Input Label"
                    android:layout_marginStart="8dp"
                    android:textSize="24sp"
                    android:textColor="@color/primary"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/imageViewLabel"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <!-- Menu 2: Proses Produksi -->
        <androidx.cardview.widget.CardView
            android:id="@+id/ProsesProduksi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="24dp">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_startProsesProduksi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.15" />

                <ImageView
                    android:id="@+id/imageViewProses"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:padding="12dp"
                    android:background="@drawable/circle_background"
                    android:src="@drawable/proses"
                    app:tint="@color/primary"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/guideline_startProsesProduksi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Proses Produksi"
                    android:textSize="24sp"
                    android:textColor="@color/primary"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageViewProses" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <!-- Menu 3: Stock Opname -->
        <androidx.cardview.widget.CardView
            android:id="@+id/StockOpname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="24dp">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.15" />

                <ImageView
                    android:id="@+id/imageViewSO"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:padding="12dp"
                    android:background="@drawable/circle_background"
                    android:src="@drawable/ic_stock_opname"
                    app:tint="@color/primary"
                    app:layout_constraintStart_toEndOf="@id/guideline_start"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stock Opname"
                    android:layout_marginStart="8dp"
                    android:textSize="24sp"
                    android:textColor="@color/primary"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/imageViewSO"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Menu 4: Sawmill -->
        <androidx.cardview.widget.CardView
            android:id="@+id/Sawmill"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="24dp">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_start1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.15" />

                <ImageView
                    android:id="@+id/menuPengaturan"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:padding="12dp"
                    android:background="@drawable/circle_background"
                    android:src="@drawable/sawmill"
                    app:tint="@color/primary"
                    app:layout_constraintStart_toEndOf="@+id/guideline_start1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Proses Sawmill"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:textColor="@color/primary"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toEndOf="@+id/menuPengaturan"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/Laporan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:alpha="0.6"
            android:clickable="false"
            android:focusable="false"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#F8F9FA">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="24dp">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_start_laporan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.15" />

                <ImageView
                    android:id="@+id/imageLaporan"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:padding="12dp"
                    android:background="@drawable/circle_background"
                    android:src="@drawable/ic_report"
                    app:tint="#9E9E9E"
                    app:layout_constraintStart_toEndOf="@id/guideline_start_laporan"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:orientation="vertical"
                    app:layout_constraintStart_toEndOf="@+id/imageLaporan"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Laporan"
                        android:textSize="24sp"
                        android:textColor="#757575"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Under Construction"
                        android:textSize="12sp"
                        android:textColor="#FF9800"
                        android:textStyle="italic"
                        android:layout_marginTop="2dp"
                        android:background="#FFF3E0"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp" />

                </LinearLayout>

                <!-- Progress indicator overlay -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#E3F2FD"
                    android:layout_marginTop="-12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Lock icon overlay -->
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_construction"
                    android:background="#616161"
                    android:padding="2dp"
                    app:tint="#FFFFFF"
                    app:layout_constraintTop_toTopOf="@id/imageLaporan"
                    app:layout_constraintEnd_toEndOf="@id/imageLaporan"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>

    <!-- Logout Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/BtnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Logout"
        android:textColor="@color/white"
        android:iconTint="@color/white"
        android:backgroundTint="@color/primary_dark"
        app:icon="@drawable/ic_logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>