            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/btnDataBaru"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:text="Data Baru"
                    android:drawableTint="@color/white" />

                <Button
                    android:id="@+id/btnInputManual"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:text="Ubah"
                    android:enabled="false"/>

                <Button
                    android:id="@+id/btnSimpan"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:text="Hapus"
                    android:enabled="false"/>

                <Button
                    android:id="@+id/btnCetak"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Cetak" />

                <!-- Search Bar -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textLayoutSearchMainTable"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="gone">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/searchMainTable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Cari data produksi..."
                        android:imeOptions="actionDone"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>




            <LinearLayout
                android:id="@+id/inputKodeManual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical"
                android:descendantFocusability="afterDescendants"
                android:visibility="gone">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/kodeLabelContainer"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    app:boxStrokeColor="@color/primary"
                    app:boxBackgroundMode="outline"
                    app:hintEnabled="true"
                    app:hintTextColor="@color/primary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/kodeLabel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Input Manual"
                        android:textSize="14sp"
                        android:imeOptions="actionDone"
                        android:inputType="textCapCharacters"
                        android:singleLine="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <ImageButton
                    android:id="@+id/btnInputKodeLabel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="8dp"
                    android:layout_weight="0.1"
                    android:src="@drawable/ic_add"
                    android:scaleType="fitCenter"
                    android:background="@null"
                    app:tint="@color/primary" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/textScanQR"
