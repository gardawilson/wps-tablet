                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="#80000000"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/transparentFrame" />

                <View
                    android:id="@+id/overlayBottom"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="#80000000"
                    app:layout_constraintTop_toBottomOf="@+id/transparentFrame"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <View
                    android:id="@+id/overlayLeft"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="#80000000"
                    app:layout_constraintTop_toTopOf="@+id/transparentFrame"
                    app:layout_constraintBottom_toBottomOf="@+id/transparentFrame"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/transparentFrame" />

                <View
                    android:id="@+id/overlayRight"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="#80000000"
                    app:layout_constraintTop_toTopOf="@+id/transparentFrame"
                    app:layout_constraintBottom_toBottomOf="@+id/transparentFrame"
                    app:layout_constraintStart_toEndOf="@+id/transparentFrame"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Area Transparan -->
                <FrameLayout
                    android:id="@+id/transparentFrame"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:background="@android:color/transparent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <View
                        android:id="@+id/scannerOverlay"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/gradient_scanner" />

                    <!-- Garis Bingkai -->
                    <View
                        android:id="@+id/borderTop"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:background="@drawable/border_default" />

                    <View
                        android:id="@+id/borderBottom"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/border_default"/>

                    <View
                        android:id="@+id/borderLeft"
                        android:layout_width="4dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/border_default" />

                    <View
                        android:id="@+id/borderRight"
                        android:layout_width="4dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:background="@drawable/border_default"/>


                </FrameLayout>

                <TextView
                    android:id="@+id/qrResultText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="8dp"
                    android:background="@android:color/black"
                    android:textColor="@android:color/white"
                    android:text="QR Code Result"
                    android:visibility="gone"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@id/transparentFrame"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/overlayBottom" />

            </androidx.constraintlayout.widget.ConstraintLayout>

